---
import "../styles/global.css";
import { property } from "../data/property";
import { cloudinaryUrl } from "../lib/cloudinary";
import SeoSchema from "../components/SeoSchema.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const {
  title = property.seo.title,
  description = property.seo.description,
  image = cloudinaryUrl(
    property.images.ogImage,
    "w_1200,h_630,c_fill,q_auto,f_auto"
  ),
  noIndex = false,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const siteName = property.name;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={property.seo.keywords.join(", ")} />
    <meta name="author" content={siteName} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Robots -->
    {
      noIndex ? (
        <meta name="robots" content="noindex, nofollow" />
      ) : (
        <meta name="robots" content="index, follow" />
      )
    }

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`${siteName} - Luxury Ski Chalet`} />
    <meta property="og:locale" content="en_CA" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta
      name="twitter:image:alt"
      content={`${siteName} - Luxury Ski Chalet`}
    />

    <!-- Geographic Meta Tags -->
    <meta name="geo.region" content="CA-BC" />
    <meta name="geo.placename" content="Fernie, British Columbia" />
    <meta
      name="geo.position"
      content={`${property.location.coordinates.latitude};${property.location.coordinates.longitude}`}
    />
    <meta
      name="ICBM"
      content={`${property.location.coordinates.latitude}, ${property.location.coordinates.longitude}`}
    />

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://res.cloudinary.com" />

    <!-- Structured Data -->
    <SeoSchema />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />
  </body>
</html>
